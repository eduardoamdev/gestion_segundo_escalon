 
const http = require('http');

let app = require('../app');

/* Captura un erro 404 o error del cliente y renderiza la
vista correspondiente. */
app.use((req, res, next) => {
  res.status(404);
  res.render('errores/error_cliente');
});

app.use((err, req, res, next) => {
  // Siempre hace un console.log del error
  console.error('ERROR', req.method, req.path, err);

  /* Solo se renderiza la vista error-servidor en caso de
  que ocurra un error antes de ser enviada la respuesta. */
  if (!res.headersSent) {
    res.status(500);
    res.render('errores/error_servidor');
  }
});

let server = http.createServer(app);

server.on('error', error => {
  if (error.syscall !== 'listen') { throw error }

  /* Captura errores especÃ­ficos e imprime por consola mensajes que nos
  sirven para concretar la causa del fallo. */
  switch (error.code) {
    case 'EACCES':
      console.error(`Port ${process.env.PORT} requires elevated privileges`);
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(`Port ${process.env.PORT} is already in use`);
      process.exit(1);
      break;
    default:
      throw error;
  }
});

server.listen(process.env.PORT, () => {
  console.log(`Listening on http://localhost:${process.env.PORT}`);
});
